  },
  "homepage": "https://github.com/Naveed333/koa_typescript#readme",
  "dependencies": {
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^10.1.1",
    "koa2-cors": "^2.0.6",
    "redis": "^4.0.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quik --staged"
    }
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.5",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-router": "^7.4.4",
    "@types/koa2-cors": "^2.0.2",
    "@types/node": "^17.0.17",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^2.0.11",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8"
  },
  "jest": {
    "verbose":true,
    "collectCoverage":true,
    "modulePathIgnorePatterns":[
      "<rootDir>/node_modules/"
    ],
    "roots":[
      "<rootDir>/__tests__"
    ],
    "transform":{
      "^.+\\.tsx?$":"ts-jest"
    },
    "testEnvironment":"node",
    "testPathIgnorePatterns":[
      "/node_modules/"
    ],
    "testRegex":"(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions":[
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
